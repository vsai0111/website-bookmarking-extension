{
    "manifest_version": 3,
    "name": "MyBookmark Extension",
    "version": "2.0",
    "description": "A simple bookmarking extension",
    "permissions": [
      "tabs",
      "storage"
    ],
    "browser_action": {
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      },
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }